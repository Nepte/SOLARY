<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  x:Class="SOLARY.Views.HomePage"
  BackgroundColor="White"
  NavigationPage.HasNavigationBar="False"
  Shell.NavBarIsVisible="False"
  Shell.TabBarIsVisible="False"
  xmlns:viewmodels="clr-namespace:SOLARY.ViewModels">

    <ContentPage.BindingContext>
        <viewmodels:HomeViewModel/>
    </ContentPage.BindingContext>

    <ContentPage.Resources>
        <ResourceDictionary>
            <viewmodels:BoolToColorConverter x:Key="BoolToColorConverter"/>
            <viewmodels:ProgressWidthConverter x:Key="ProgressWidthConverter"/>
            <viewmodels:BatteryToColorConverter x:Key="BatteryToColorConverter"/>
            <viewmodels:UsageToColorConverter x:Key="UsageToColorConverter"/>
            <Style x:Key="CardShadowStyle" TargetType="Border">
                <Setter Property="Shadow">
                    <Setter.Value>
                        <Shadow Brush="#20000000" 
                              Offset="0,4" 
                              Radius="12" />
                    </Setter.Value>
                </Setter>
            </Style>
            <Style x:Key="MetricCardStyle" TargetType="Border">
                <Setter Property="BackgroundColor" Value="White"/>
                <Setter Property="StrokeShape" Value="RoundRectangle 20"/>
                <Setter Property="Padding" Value="20"/>
                <Setter Property="StrokeThickness" Value="0"/>
                <Setter Property="HeightRequest" Value="180"/>
                <Setter Property="WidthRequest" Value="180"/>
                <Setter Property="Shadow">
                    <Setter.Value>
                        <Shadow Brush="#20000000" 
                              Offset="0,4" 
                              Radius="8" />
                    </Setter.Value>
                </Setter>
            </Style>
            <Style x:Key="MainCardStyle" TargetType="Border">
                <Setter Property="BackgroundColor" Value="White"/>
                <Setter Property="StrokeShape" Value="RoundRectangle 20"/>
                <Setter Property="Padding" Value="20"/>
                <Setter Property="StrokeThickness" Value="0"/>
                <Setter Property="Shadow">
                    <Setter.Value>
                        <Shadow Brush="#20000000" 
                              Offset="0,4" 
                              Radius="12" />
                    </Setter.Value>
                </Setter>
            </Style>
            <Style x:Key="NavItemStyle" TargetType="VerticalStackLayout">
                <Setter Property="HorizontalOptions" Value="Center"/>
                <Setter Property="VerticalOptions" Value="Center"/>
                <Setter Property="Spacing" Value="8"/>
                <Setter Property="Margin" Value="0,10,0,0"/>
            </Style>
            <Style x:Key="NavIconStyle" TargetType="Image">
                <Setter Property="HeightRequest" Value="24"/>
                <Setter Property="WidthRequest" Value="24"/>
                <Setter Property="HorizontalOptions" Value="Center"/>
            </Style>
            <Style x:Key="NavTextStyle" TargetType="Label">
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="HorizontalOptions" Value="Center"/>
                <Setter Property="TextColor" Value="#999999"/>
            </Style>
            <Style x:Key="NavTextActiveStyle" TargetType="Label" BasedOn="{StaticResource NavTextStyle}">
                <Setter Property="TextColor" Value="#FFD602"/>
            </Style>
            <Color x:Key="YellowColor">#FFD602</Color>
            <Color x:Key="RedColor">#F04438</Color>
            <Color x:Key="YellowBackgroundColor">#FFF8E0</Color>
            <Color x:Key="RedBackgroundColor">#FEECEB</Color>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="*, Auto">
        <ScrollView Grid.Row="0" Margin="0,-40,0,0">
            <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto" 
                Padding="20,40,20,20" 
                RowSpacing="15">

                <!-- Header -->
                <Grid Grid.Row="0" ColumnDefinitions="*" RowDefinitions="Auto,Auto" Margin="0,0,0,0">
                    <Label Grid.Row="0" Grid.Column="0"
                         Text="Bonjour" 
                         TextColor="#333333" 
                         FontSize="32" 
                         FontAttributes="Bold"/>
                    <Label Grid.Row="1" Grid.Column="0"
                         Text="{Binding FormattedDate}" 
                         TextColor="#999999" 
                         FontSize="16"
                         Margin="0,0,0,10"/>
                </Grid>

                <Grid Grid.Row="1" Grid.RowSpan="3" RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*" HorizontalOptions="Center">

                    <!-- Main Battery Card -->
                    <Border Grid.Row="0" 
                          Style="{StaticResource MainCardStyle}"
                          WidthRequest="375">
                        <Grid RowDefinitions="Auto,Auto,Auto" RowSpacing="10">
                            <!-- Section du cercle avec l'icÃ´ne batterie -->
                            <HorizontalStackLayout Spacing="10">
                                <Grid HeightRequest="36" 
                                      WidthRequest="36" 
                                      HorizontalOptions="Start" 
                                      VerticalOptions="Center">
                                    <GraphicsView x:Name="CircularProgressView" 
                                                HeightRequest="36" 
                                                WidthRequest="36" 
                                                HorizontalOptions="Fill" 
                                                VerticalOptions="Fill"
                                                BackgroundColor="Transparent"/>

                                    <Image x:Name="ElectricityIcon"
                                         Source="icon_electricity_yellow.png"
                                         HeightRequest="16"
                                         WidthRequest="16"
                                         HorizontalOptions="Center"
                                         VerticalOptions="Center"
                                         Margin="0"/>
                                </Grid>

                                <Label Text="{Binding CurrentKwh, StringFormat='{0:F3}'}" 
                                     FontSize="30" 
                                     FontAttributes="Bold" 
                                     VerticalOptions="Center"
                                     TextColor="#333333"/>
                                <Label Text="KWh" 
                                     FontSize="30" 
                                     TextColor="#666666" 
                                     VerticalOptions="Center"/>
                            </HorizontalStackLayout>

                            <Grid Grid.Row="1" ColumnDefinitions="*,Auto" Margin="0,5,0,0">
                                <Label Text="Pourcentage de batterie de la borne" 
                                     TextColor="#666666" 
                                     FontSize="16"
                                     VerticalOptions="Center"/>
                                <Label Grid.Column="1" 
                                     x:Name="PercentLabel"
                                     Text="{Binding BatteryLevel, StringFormat='{0}%'}" 
                                     TextColor="{Binding BatteryLevel, Converter={StaticResource BatteryToColorConverter}, ConverterParameter='text'}" 
                                     FontAttributes="Bold" 
                                     FontSize="16" 
                                     VerticalOptions="Center"/>
                            </Grid>

                            <Grid Grid.Row="2" HeightRequest="6" Margin="0,5,0,0" x:Name="ProgressContainer">
                                <BoxView Color="#EEEEEE" CornerRadius="3" HeightRequest="6"/>
                                <BoxView Color="{Binding BatteryLevel, Converter={StaticResource BatteryToColorConverter}, ConverterParameter='bar'}" 
                                       CornerRadius="3" 
                                       HorizontalOptions="Start" 
                                       HeightRequest="6"
                                       WidthRequest="100"/>
                            </Grid>
                        </Grid>
                    </Border>

                    <!-- Energy Metrics Row 1 - TENSION ET COURANT -->
                    <Grid Grid.Row="1" ColumnDefinitions="*,*" ColumnSpacing="15" HorizontalOptions="Center" Margin="0,15,0,0">
                        <!-- Tension Card -->
                        <Border Grid.Column="0" 
                             Style="{StaticResource MetricCardStyle}">
                            <Grid RowDefinitions="Auto,Auto,*" RowSpacing="10">
                                <Image Source="lightbulb.png" 
                                     HeightRequest="32" 
                                     WidthRequest="32"
                                     HorizontalOptions="Start"
                                     Grid.Row="0"/>
                                <Label Text="Tension" 
                                     TextColor="#666666"
                                     FontSize="16"
                                     Grid.Row="1"
                                     Margin="0,5,0,0"/>
                                <HorizontalStackLayout Grid.Row="2" VerticalOptions="End" Spacing="5">
                                    <Label Text="{Binding Voltage, StringFormat='{0:F1}'}" 
                                         TextColor="#333333"
                                         FontSize="36"
                                         FontAttributes="Bold"/>
                                    <Label Text="V" 
                                         TextColor="#666666"
                                         FontSize="16"
                                         VerticalOptions="End"
                                         Margin="0,0,0,5"/>
                                </HorizontalStackLayout>
                            </Grid>
                        </Border>

                        <!-- Courant Card -->
                        <Border Grid.Column="1" 
                             Style="{StaticResource MetricCardStyle}">
                            <Grid RowDefinitions="Auto,Auto,*" RowSpacing="10">
                                <Image Source="usage.png" 
                                     HeightRequest="32" 
                                     WidthRequest="32"
                                     HorizontalOptions="Start"
                                     Grid.Row="0"/>
                                <Label Text="Courant" 
                                     TextColor="#666666"
                                     FontSize="16"
                                     Grid.Row="1"
                                     Margin="0,5,0,0"/>
                                <HorizontalStackLayout Grid.Row="2" VerticalOptions="End" Spacing="5">
                                    <Label Text="{Binding Current, StringFormat='{0:F1}'}" 
                                         TextColor="#333333"
                                         FontSize="36"
                                         FontAttributes="Bold"/>
                                    <Label Text="A" 
                                         TextColor="#666666"
                                         FontSize="16"
                                         VerticalOptions="End"
                                         Margin="0,0,0,5"/>
                                </HorizontalStackLayout>
                            </Grid>
                        </Border>
                    </Grid>

                    <!-- Energy Metrics Row 2 - PUISSANCE ET CO2 -->
                    <Grid Grid.Row="2" ColumnDefinitions="*,*" ColumnSpacing="15" HorizontalOptions="Center" Margin="0,15,0,0">
                        <!-- Puissance Card -->
                        <Border Grid.Column="0" 
                             Style="{StaticResource MetricCardStyle}">
                            <Grid RowDefinitions="Auto,Auto,*" RowSpacing="10">
                                <Image Source="capacity.png" 
                                     HeightRequest="32" 
                                     WidthRequest="32"
                                     HorizontalOptions="Start"
                                     Grid.Row="0"/>
                                <Label Text="Puissance" 
                                     TextColor="#666666"
                                     FontSize="16"
                                     Grid.Row="1"
                                     Margin="0,5,0,0"/>
                                <HorizontalStackLayout Grid.Row="2" VerticalOptions="End" Spacing="5">
                                    <Label Text="{Binding Power, StringFormat='{0:F1}'}" 
                                         TextColor="#333333"
                                         FontSize="36"
                                         FontAttributes="Bold"/>
                                    <Label Text="W" 
                                         TextColor="#666666"
                                         FontSize="16"
                                         VerticalOptions="End"
                                         Margin="0,0,0,5"/>
                                </HorizontalStackLayout>
                            </Grid>
                        </Border>

                        <!-- CO2 Reduction Card -->
                        <Border Grid.Column="1" 
                             Style="{StaticResource MetricCardStyle}">
                            <Grid RowDefinitions="Auto,Auto,*" RowSpacing="10">
                                <Image Source="co2.png" 
                                     HeightRequest="32" 
                                     WidthRequest="32"
                                     HorizontalOptions="Start"
                                     Grid.Row="0"/>
                                <Label Text="RÃ©duction du CO2" 
                                     TextColor="#666666"
                                     FontSize="16"
                                     Grid.Row="1"
                                     Margin="0,5,0,0"/>
                                <HorizontalStackLayout Grid.Row="2" VerticalOptions="End" Spacing="5">
                                    <Label Text="{Binding Co2Reduction, StringFormat='{0:F6}'}" 
                                         TextColor="#333333"
                                         FontSize="36"
                                         FontAttributes="Bold"/>
                                    <Label Text="g" 
                                         TextColor="#666666"
                                         FontSize="16"
                                         VerticalOptions="End"
                                         Margin="0,0,0,5"/>
                                </HorizontalStackLayout>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>

                <!-- Chart Card -->
                <Border Grid.Row="4" 
                     BackgroundColor="White"
                     StrokeShape="RoundRectangle 20"
                     Padding="15"
                     StrokeThickness="0"
                     Style="{StaticResource CardShadowStyle}"
                     Margin="0,0,0,20">
                    <Grid RowDefinitions="Auto,Auto,*" RowSpacing="10">
                        <Grid ColumnDefinitions="*,Auto">
                            <Label Text="ÃlectricitÃ© produite par l'Ã©nergie solaire" 
                                 TextColor="#666666" 
                                 FontSize="16"/>
                            <Button Grid.Column="1" 
                                  Text="â®" 
                                  FontSize="20" 
                                  BackgroundColor="Transparent" 
                                  TextColor="#666666" 
                                  Padding="10,0" 
                                  CornerRadius="15"/>
                        </Grid>

                        <Grid Grid.Row="1" ColumnDefinitions="Auto,*,Auto">
                            <HorizontalStackLayout Grid.Column="0">
                                <Label Text="{Binding PanelGenerated, StringFormat='{0:F2}'}" 
                                     FontSize="24" 
                                     FontAttributes="Bold" 
                                     VerticalOptions="Center"
                                     TextColor="#333333"/>
                                <Label Text="KWh" 
                                     FontSize="20" 
                                     TextColor="#666666" 
                                     VerticalOptions="Center"
                                     Margin="5,0,0,0"/>
                            </HorizontalStackLayout>

                            <HorizontalStackLayout Grid.Column="2" Spacing="5">
                                <Ellipse Fill="#FFD602" 
                                       HeightRequest="8" 
                                       WidthRequest="8" 
                                       VerticalOptions="Center"/>
                                <Label Text="En direct" 
                                     TextColor="#333333" 
                                     FontSize="14" 
                                     VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                        </Grid>

                        <!-- Chart View -->
                        <Grid Grid.Row="2" RowDefinitions="Auto,*,Auto" ColumnDefinitions="Auto,*" Margin="0,10,0,0">
                            <Grid Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" RowDefinitions="1*,1*,1*,1*,1*" VerticalOptions="Fill">
                                <Label Text="200KWh" TextColor="#999999" FontSize="12" HorizontalOptions="End" Margin="0,0,5,0" Grid.Row="0"/>
                                <Label Text="150KWh" TextColor="#999999" FontSize="12" HorizontalOptions="End" Margin="0,0,5,0" Grid.Row="1"/>
                                <Label Text="100KWh" TextColor="#999999" FontSize="12" HorizontalOptions="End" Margin="0,0,5,0" Grid.Row="2"/>
                                <Label Text="50KWh" TextColor="#999999" FontSize="12" HorizontalOptions="End" Margin="0,0,5,0" Grid.Row="3"/>
                                <Label Text="0" TextColor="#999999" FontSize="12" HorizontalOptions="End" Margin="0,0,5,0" Grid.Row="4"/>
                            </Grid>

                            <Grid Grid.Row="0" Grid.RowSpan="2" Grid.Column="1">
                                <GraphicsView x:Name="GraphView" 
                                            Drawable="{Binding GraphDrawable}"
                                            HeightRequest="200">
                                    <GraphicsView.GestureRecognizers>
                                        <PanGestureRecognizer PanUpdated="OnGraphPanUpdated" />
                                        <TapGestureRecognizer Tapped="OnGraphTapped" />
                                    </GraphicsView.GestureRecognizers>
                                </GraphicsView>
                            </Grid>

                            <Border Grid.Row="0" Grid.Column="1"
                                 BackgroundColor="#333333"
                                 StrokeShape="RoundRectangle 8"
                                 Padding="10,8"
                                 StrokeThickness="0"
                                 HorizontalOptions="Center"
                                 VerticalOptions="Start"
                                 Margin="0,20,0,0"
                                 x:Name="TooltipFrame"
                                 Shadow="{Shadow Brush='#40000000', Offset='0,3', Radius='6'}">
                                <VerticalStackLayout Spacing="2">
                                    <Label x:Name="TooltipDate"
                                         Text="FÃ©v, 22" 
                                         TextColor="White"
                                         FontSize="14"
                                         FontAttributes="Bold"
                                         HorizontalOptions="Center"/>
                                    <Label x:Name="TooltipValue"
                                         Text="120kwh" 
                                         TextColor="White"
                                         FontSize="14"
                                         HorizontalOptions="Center"/>
                                </VerticalStackLayout>
                            </Border>

                            <Grid Grid.Row="2" Grid.Column="1" ColumnDefinitions="1*,1*,1*,1*,1*,1*">
                                <Label Text="13:00" TextColor="#999999" FontSize="12" HorizontalOptions="Start" Grid.Column="0"/>
                                <Label Text="14:00" TextColor="#999999" FontSize="12" HorizontalOptions="Center" Grid.Column="1"/>
                                <Label Text="15:00" TextColor="#999999" FontSize="12" HorizontalOptions="Center" Grid.Column="2"/>
                                <Label Text="16:00" TextColor="#999999" FontSize="12" HorizontalOptions="Center" Grid.Column="3"/>
                                <Label Text="17:00" TextColor="#999999" FontSize="12" HorizontalOptions="Center" Grid.Column="4"/>
                                <Label Text="18:00" TextColor="#999999" FontSize="12" HorizontalOptions="End" Grid.Column="5"/>
                            </Grid>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </ScrollView>

        <!-- Bottom Navigation -->
        <Border Grid.Row="1" 
             BackgroundColor="White" 
             StrokeShape="RoundRectangle 30,30,0,0"
             Padding="0" 
             StrokeThickness="0"
             HeightRequest="80" 
             VerticalOptions="End"
             Shadow="{Shadow Brush='#30000000', Offset='0,-5', Radius='15'}">
            <Grid RowDefinitions="Auto,*" ColumnDefinitions="*,*,*,*,*">
                <BoxView Grid.Row="0" Grid.Column="0" 
                       HeightRequest="3" 
                       WidthRequest="40" 
                       Color="#FFD602" 
                       HorizontalOptions="Center" 
                       VerticalOptions="Start"
                       Margin="0,0,0,0"/>

                <VerticalStackLayout Grid.Row="1" Grid.Column="0" 
                                   Style="{StaticResource NavItemStyle}"
                                   x:Name="AccueilTab">
                    <Image Source="icon_home.png" 
                         Style="{StaticResource NavIconStyle}"/>
                    <Label Text="Accueil" 
                         Style="{StaticResource NavTextActiveStyle}"/>
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Row="1" Grid.Column="1" 
                                   Style="{StaticResource NavItemStyle}"
                                   x:Name="StatistiquesTab">
                    <Image Source="icon_stats.png" 
                         Style="{StaticResource NavIconStyle}"/>
                    <Label Text="Statistiques" 
                         Style="{StaticResource NavTextStyle}"/>
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Row="1" Grid.Column="2" 
                                   Style="{StaticResource NavItemStyle}"
                                   x:Name="LocaliserTab">
                    <Image Source="icon_map.png" 
                         Style="{StaticResource NavIconStyle}"/>
                    <Label Text="Localiser" 
                         Style="{StaticResource NavTextStyle}"/>
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Row="1" Grid.Column="3" 
                                   Style="{StaticResource NavItemStyle}"
                                   x:Name="CodeTab">
                    <Image Source="icon_code.png" 
                         Style="{StaticResource NavIconStyle}"/>
                    <Label Text="Code" 
                         Style="{StaticResource NavTextStyle}"/>
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Row="1" Grid.Column="4" 
                                   Style="{StaticResource NavItemStyle}"
                                   x:Name="ParametresTab">
                    <Image Source="icon_settings.png" 
                         Style="{StaticResource NavIconStyle}"/>
                    <Label Text="ParamÃ¨tres" 
                         Style="{StaticResource NavTextStyle}"/>
                </VerticalStackLayout>
            </Grid>
        </Border>
    </Grid>
</ContentPage>
