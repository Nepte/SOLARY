<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SOLARY.Views.WelcomePage"
             BackgroundColor="Black">

    <Grid RowDefinitions="0.1*, 0.4*, 0.5*">

        <!-- Image de fond -->
        <Image Source="background.png"
               Aspect="AspectFill"
               Opacity="0.8"
               Grid.RowSpan="3" />

        <!-- Barres de progression alignées en haut -->
        <StackLayout Orientation="Horizontal"
                     Grid.Row="0"
                     HorizontalOptions="Center"
                     VerticalOptions="Center"
                     Spacing="5"
                     Margin="0,20,0,0"
                     HeightRequest="10">
            <!-- Barres -->
            <BoxView x:Name="Bar1" WidthRequest="100" HeightRequest="5" BackgroundColor="#FFD602" CornerRadius="3" Opacity="1.0" />
            <BoxView x:Name="Bar2" WidthRequest="100" HeightRequest="5" BackgroundColor="White" CornerRadius="3" Opacity="1" />
            <BoxView x:Name="Bar3" WidthRequest="100" HeightRequest="5" BackgroundColor="White" CornerRadius="3" Opacity="1" />
        </StackLayout>

        <!-- Conteneur pour les images -->
        <Grid x:Name="ImageContainer"
              Grid.Row="1"
              VerticalOptions="Center"
              HorizontalOptions="Center"
              HeightRequest="450"
              WidthRequest="450"
              Margin="0,50,0,10" />

        <!-- Overlay Text and Button -->
        <Grid Grid.Row="2" VerticalOptions="End" Padding="20">
            <!-- Image en fond derrière le texte -->
            <Image Source="borne_solary.png"
                   Aspect="AspectFit"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"
                   Margin="0,-200,0,0" />

            <!-- Texte aligné à gauche -->
            <StackLayout VerticalOptions="Center" Spacing="15" Padding="20" HorizontalOptions="Start">
                <Label Text="La borne"
                       FontFamily="CeraProBlack"
                       FontSize="50"
                       FontAttributes="Bold"
                       TextColor="#FFD602"
                       HorizontalTextAlignment="Start"
                       Margin="0,0,0,-20" />

                <Label Text="de chargement"
                       FontFamily="CeraProBlack"
                       FontSize="50"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalTextAlignment="Start"
                       Margin="0,0,0,-20" />

                <!-- Ligne avec image et texte -->
                <StackLayout Orientation="Horizontal" VerticalOptions="Start" HorizontalOptions="Start" Spacing="5">
                    <Label Text="innovante Solary"
                           FontFamily="CeraProBlack"
                           FontSize="50"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalTextAlignment="Start" />
                    <Image Source="eclair.png" Aspect="AspectFit" HeightRequest="55" VerticalOptions="Center" />
                </StackLayout>

                <Label Text="Solary aide à réduire votre empreinte carbone en maximisant l'efficacité de votre énergie solaire."
                       FontSize="18"
                       FontFamily="CeraProRegular"
                       LineHeight="1.5"
                       TextColor="White"
                       HorizontalTextAlignment="Start"
                       Margin="0,10,0,20" />

                <!-- Bouton prenant toute la largeur -->
                <Button Text="Commencer"
                        BackgroundColor="#FFD602"
                        TextColor="Black"
                        FontFamily="CeraProMedium"
                        CornerRadius="25"
                        HeightRequest="50"
                        Margin="20,0,20,60" 
                        HorizontalOptions="FillAndExpand"
                        Command="{Binding NavigateToLoginCommand}"/>
            </StackLayout>
        </Grid>
    </Grid>
</ContentPage>
